@page "/login"
@inject AuthService Auth
@inject NavigationManager Navigation

<div class="auth-container">
    <div class="auth-card">
        <h1 class="auth-title">Welcome Back</h1>

        @if (!string.IsNullOrEmpty(_error))
        {
            <div class="auth-error">@_error</div>
        }

        <EditForm Model="_model" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label>Username</label>
                <InputText @bind-Value="_model.Username" class="form-input" autocomplete="username" />
                <ValidationMessage For="@(() => _model.Username)" />
            </div>

            <div class="form-group">
                <label>Password</label>
                <InputText @bind-Value="_model.Password" type="password" class="form-input" autocomplete="current-password" />
                <ValidationMessage For="@(() => _model.Password)" />
            </div>

            <div class="remember-me">
                <InputCheckbox @bind-Value="_model.RememberMe" />
                <span>Remember me</span>
            </div>

            <button type="submit" class="btn btn-primary btn-full" disabled="@_loading">
                @if (_loading) { <span>Signing in...</span> } else { <span>Sign In</span> }
            </button>
        </EditForm>
    </div>
</div>

@code {
    private LoginRequest _model = new() { RememberMe = true };
    private string? _error;
    private bool _loading;

    protected override async Task OnInitializedAsync()
    {
        var accountExists = await Auth.CheckAccountExists();
        if (!accountExists)
        {
            Navigation.NavigateTo("/register");
        }
    }

    private async Task HandleLogin()
    {
        _loading = true;
        _error = null;

        var (success, error) = await Auth.Login(_model.Username, _model.Password, _model.RememberMe);

        if (success)
        {
            Navigation.NavigateTo("/calendar", forceLoad: true);
        }
        else
        {
            _error = error ?? "Login failed";
        }

        _loading = false;
    }
}
